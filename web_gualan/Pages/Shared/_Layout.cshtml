@using web_gualan.Models
@{
    var data = ViewData["LayoutData"] as MenuLayoutViewModel;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Web GALÁN</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @* NAVBAR *@
    @if (data != null && !string.IsNullOrEmpty(data.Usuario))
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <a class="navbar-brand" href="/web_gualan">GALÁN</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="menu">
                    <ul class="navbar-nav me-auto">

                        @foreach (var padre in data.Padres)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                    @padre.texto
                                </a>

                                <ul class="dropdown-menu">
                                    @foreach (var hijo in data.Hijos[padre.codigoMenu])
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@hijo.href">
                                                @hijo.texto
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>

                    <span class="navbar-text text-white me-3">
                        @data.Usuario
                    </span>

                    <a class="btn btn-outline-light btn-sm" href="web_gualan/Logout">
                        Salir
                    </a>
                </div>
            </div>
        </nav>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* ✅ RENDER DE SCRIPTS POR PÁGINA *@
    @RenderSection("Scripts", required: false)

</body>
</html>
